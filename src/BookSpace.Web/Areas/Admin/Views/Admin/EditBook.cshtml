@model BookSpace.Web.Models.BookViewModels.DetailedBookViewModel

@{
    ViewData["Title"] = "Edit Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="books-heading">
    <p>Edit Book <br /> @Model.Title</p>
</div>
<div class="user-form">
    <form asp-action="EditBook" class="user-form2">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group user-form-input">
            <label asp-for="Isbn" class="control-label"></label>
            <input asp-for="Isbn" class="form-control user-input-field" type="text" />
            <span asp-validation-for="Isbn" class="text-danger"></span>
        </div>
        <div class="form-group  user-form-input">
            <label asp-for="Author" class="control-label"></label>
            <input asp-for="Author" class="form-control user-input-field" type="text" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group  user-form-input">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control user-input-field" type="text" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group  user-form-input">
            <label asp-for="Author" class="control-label"></label>
            <input asp-for="Author" class="form-control user-input-field" type="text" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group  user-form-input">
            <label asp-for="PublicationYear" class="control-label"></label>
            <input asp-for="PublicationYear" class="form-control user-input-field" />
            <span asp-validation-for="PublicationYear" class="text-danger"></span>
        </div>
        <div class="form-group  user-form-input">
            <label asp-for="Rating" class="control-label"></label>
            <input asp-for="Rating" class="form-control user-input-field" type="number" min="1" max="5" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="form-group  user-form-input">
            <label asp-for="CoverUrl" class="control-label"></label>
            <input asp-for="CoverUrl" class="form-control user-input-field" type="text" />
            <span asp-validation-for="CoverUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default user-btn-pass" />
        </div>
    </form>
</div>

